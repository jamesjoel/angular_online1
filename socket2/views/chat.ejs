<html>

<head>
    <link type='text/css' rel="stylesheet" href="/css/bootstrap.css" />
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        $(document).ready(function () {
            $(".btn-success").click(function () {
                var name = $("#name").val();
                var message = $("#message").val();
                var sendObj = { name: name, message: message };
                //alert(sendObj);
                socket.emit("send", sendObj);
            });
        });

        socket.on("sendtoall", function (obj) {
            var str = "<p><b>" + obj.name + "</b> : " + obj.message + "</p>";
            var oldmsg = $("#chat-box").html();
            oldmsg += str;
            $("#chat-box").html(oldmsg);
        });

    </script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3>Online Users</h3>
                            </div>
                            <div class="card-body">
                                <a href="#">Rohit</a>
                                <Br />
                                <a href="#">James</a>
                                <Br />
                                <a href="#">Nidhi</a>
                                <Br />
                                <h5>Chat With : <strong>James</strong></h5>
                                <textarea class="form-control" placeholder="Your Message"></textarea>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-success">Send</button>
                            </div>

                            
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-md-7">
                    <h2>Chat Box</h2>
                    <div id="chat-box" class="card-body">
                        
                    </div>
                </div>
        </div>
    </div>
</body>

</html>

