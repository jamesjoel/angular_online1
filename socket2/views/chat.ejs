<html>

<head>
    <link type='text/css' rel="stylesheet" href="/css/bootstrap.css" />
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
        
        socket.on("onlineUser", function(user){
            //console.log(user);
            document.getElementById("onlineUser").innerHTML="";
            user.forEach(function(u){
                document.getElementById("onlineUser").innerHTML += "<a href='#'>"+u.name +"</a><Br />";

            })
        })
        $(document).ready(function(){
            $(".online").click(function(){
                var x = $(this).html();
                $("#chatWith").html(x);
            });
        });

    </script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3>Online Users</h3>
                            </div>
                            <div class="card-body">
                                <div id="onlineUser">

                                    
                                </div>
                                <h5>Chat With : <strong id="chatWith"></strong></h5>
                                <textarea class="form-control" placeholder="Your Message"></textarea>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-success">Send</button>
                            </div>

                            
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-md-7">
                    <h2>Chat Box</h2>
                    <div id="chat-box" class="card-body">
                        
                    </div>
                </div>
        </div>
    </div>
</body>

</html>

